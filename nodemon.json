{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "src/__generated__"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node -r ts-node/register -r dotenv-flow/config"
  },
  "watch": [
    "src/"
  ],
  "env": {
    "NODE_ENV": "DEVELOPMENT"
  },
  "ext": "js,json,ts,graphql"
}