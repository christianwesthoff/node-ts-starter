{
  "private": true,
  "name": "node-ts-starter",
  "version": "1.0.0",
  "scripts": {
    "build": "run-s build:clean build:code",
    "build:clean": "rimraf dist",
    "build:code": "tsc",
    "dev": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect src/index.ts",
    "fmt": "prettier --write '**/*.{js,ts}'",
    "fmt:p": "prettier-package-json --write",
    "prod": "run-s build && node dist/index.js",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "dotenv-flow": "3.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/node": "~14.14.20",
    "jest": "26.5.0",
    "nodemon": "2.0.7",
    "npm-run-all": "4.1.5",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.3",
    "rimraf": "^2.7.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "winston": "3.3.3"
  }
}